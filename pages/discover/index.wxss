/* pages/discover/index.wxss */

.discover .container{
  width: 750rpx;
}
.discover  .box{
  width: 750rpx;
  height: 140rpx;
  display: flex;
  flex-direction: row;
    /* border: 1rpx solid black; */

}
.discover .box .pic{
  width:180rpx;
  height: 140rpx;
  /* border: 1rpx solid black; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.discover  .box .pic .icon{
  width: 60rpx;
  height:60rpx;
}
.discover .box .right{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #dfdfdf;
}
.discover .box .right .name{
  font-weight: bold;
  width:85%;
  color: #3a3a3a
}

.discover .turnToIcon{
  /* margin-left: 400rpx; */
  margin-right: 50rpx;
  width: 45rpx;
  height: 45rpx;
}