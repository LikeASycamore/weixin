/* pages/commulity/index.wxss */

.community .headView {
  margin-top: 180rpx;
  width: 750rpx;
  height: 100rpx;
}


.community .headView .public {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #eeeeee;
}

 .community .publicText{
    margin-left: 50rpx;
    font-size: 32rpx;
    color: grey;
}

/* 内容与功能 */

.community .publicContentView {
  display: flex;
  flex-direction: row;
  height: 200rpx;
}

.community .publicContentView .content {
  width: 187rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.community .publicContentView .content .box{
    width: 130rpx;
    height: 130rpx;
    /* border: 1rpx solid red; */
}
.community .jiantouIcon{
  margin-left:450rpx;
  width: 40rpx;
  height:40rpx;
}

.community .contentIcon {
  /* margin-top: 80rpx; */
  margin-left: 20rpx;
  width: 70rpx;
  height: 70rpx;
}

.community .contentText {
  font-size: 30rpx;
  width: 130rpx;
}

/* 书籍社区 */

.community .commulityView {
  width: 750rpx;
  height: 100%;
}

 .community .cmHead {
  width: 750rpx;
  height: 100rpx;
  background: #eeeeee;
}

.community .cmHead .cmText {
  margin-left: 20rpx;
  font-size: 30rpx;
  line-height: 100rpx;
}

.community .cmBody {
  margin-top: 10rpx;
  height: 100%;
  /* border: 1rpx solid black;
  background: black; */
  display: flex;
  flex-direction: column;
}

.community .cmBody .bookBox {
  display: flex;
  flex-direction: row;
  height: 150rpx;
  border-bottom: 1rpx solid grey;
  
}

.community .bookBox .bookSmallpic {
  width: 150rpx;
  /* border: 1rpx solid red; */
  display: flex;
  flex-direction: row;
  align-items: center;
}
.community .bookSmallpic .pic{
  margin-left: 30rpx;
  width: 60rpx;
  height: 100rpx;
}

.community .bookBox .bookName {
  font-size: 35rpx;
  width: 380rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.community .bookNameText{
  margin-left: 20rpx;
  font-size: 35rpx;
  font-weight: bold;
}

.community .bookBox .comment {
  width: 200rpx;
  /* border: 1rpx solid red; */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.community .commentText {
  width: 100rpx;
  margin-left: 50rpx;
  height: 50rpx;
  font-size: 30rpx;
  border-radius: 25rpx;
  line-height: 50rpx;
  text-align: center;
  background: #c8c8c8;
  color: white;
}
.community .scrollView{
  width: 730rpx;
  height: 550rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* border: 1rpx solid red; */
  /* background: black; */
}
